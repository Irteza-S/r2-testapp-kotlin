<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.readium.r2.testapp.WordSearch">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="395dp"
        android:layout_height="715dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/searchSentenceTextView"
            android:layout_width="197dp"
            android:layout_height="47dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"/>
        <Button
            android:text="searchSnippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"
            />
        <Button
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clearButton" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/searchButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toStartOf="@+id/allButton" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.363" app:layout_constraintVertical_bias="0.204"/>
        <Button
            android:text="SearchOffset"
            android:layout_width="131dp"
            android:layout_height="54dp"
            android:id="@+id/searchOffset" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/searchButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"/>

        <Button
            android:id="@+id/allButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="displayAll"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toStartOf="@+id/searchOffset"
            app:layout_constraintTop_toBottomOf="@+id/searchSentenceTextView"
            app:layout_constraintVertical_bias="0.553" />
        <ScrollView
            android:layout_width="366dp"
            android:layout_height="486dp" android:layout_marginTop="112dp"
            app:layout_constraintTop_toBottomOf="@+id/searchSentenceTextView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/scrollView2">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resultsTextView"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
